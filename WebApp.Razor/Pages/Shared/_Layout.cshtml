<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WebApp.Razor</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WebApp.Razor.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-page="/Index">WebApp.Razor</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Privacy">Privacy</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - WebApp.Razor - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>


    <div class="toast-container position-fixed bottom-0 end-0 p-3">
        @* <div id="appToast" class="toast text-bg-success border-0" role="alert">
            <div class="d-flex">
                <div class="toast-body" id="appToastMessage"></div>
                <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast"></button>
            </div>
        </div> *@
        <div id="appToast" class="toast align-items-center border-0" role="alert">
            <div class="d-flex">
                <div class="toast-body d-flex align-items-center gap-2">
                    <i id="appToastIcon" class="bi"></i>
                    <span id="appToastMessage"></span>
                </div>
                <button type="button" class="btn-close me-2 m-auto" data-bs-dismiss="toast"></button>
            </div>
        </div>
    </div>

    @* Shared modal shell used by all popups *@
    <div class="modal fade" id="appModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog modal-lg modal-dialog-centered">
            <div class="modal-content" id="appModalContent">
                @* Content will be injected here by JS *@
            </div>
        </div>
    </div>

    <!-- Screen Blocker / Progress Overlay -->
    @* <div id="screenBlocker" class="screen-blocker d-none">
        <div class="screen-blocker-content">
            <div class="spinner-border text-light" role="status"></div>
            <div class="mt-3 fw-bold text-light">Processing… Please wait</div>
        </div>
    </div> *@
    <div id="screenBlocker" class="screen-blocker d-none">
        <div class="screen-blocker-content">
            <div class="spinner-border text-light" role="status"></div>
            <div id="screenBlockerMessage" class="mt-3 fw-bold text-light">Processing…</div>
        </div>
    </div>




    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    @* <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script> *@
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    @* <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false) *@

    <script src="~/js/site.js"></script>
    @RenderSection("Scripts", required: false)

</body>
</html>