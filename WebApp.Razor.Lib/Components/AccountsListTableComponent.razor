@using WebAPI.Data.Models

<h3>AccountsListTableComponent</h3>

@code {
    
}

<div>
    <table class="table table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Description</th>
                <th>IsActive</th>
                <th>Category</th>
            </tr>
        </thead>
        <tbody>
            @if (Items == null || !Items.Any())
            {
                <tr><td colspan="3">(no items)</td></tr>
            }
            else
            {
                @foreach (var item in Items)
                {
                    <tr>
                        <td>@item.Name</td>
                        <td>@item.Name</td>
                        <td>@item.Description</td>
                        <td>@(item.IsActive ? "Active" : "Inactive")</td>
                        <td>@item.Category</td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>


@code {
    [Parameter] public IEnumerable<Account>? Items { get; set; }
}