@model IEnumerable<Account>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Description</th>
            <th>IsActive</th>
            <th>Category</th>
        </tr>
    </thead>
    <tbody>
        @if (Model == null || !Model.Any())
        {
            <tr><td colspan="3">(no items)</td></tr>
        }
        else
        {
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Name</td>
                    <td>@item.Description</td>
                    <td>@(item.IsActive ? "Active" : "Inactive")</td>
                    <td>@item.Category</td>
                </tr>
            }
        }
    </tbody>
</table>
